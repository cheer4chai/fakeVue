{
    "extends": "standard",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            1,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": [
            1,
            "always"
        ],
        "no-new":[
            0
        ],
        "space-before-function-paren":[
            0
        ]
    }
}